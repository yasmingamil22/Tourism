<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuAliPalace">

    <TextView
        android:id="@+id/tvm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#59586f"
        android:fontFamily=""
        android:text="Muhammed Ali Palace"
        android:textColor="#F4F6F8"
        android:textSize="30dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/tvm"
        android:id="@+id/im1m"
        android:src="@drawable/mual"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/tv2m"
        android:textSize="17dp"
        android:layout_below="@+id/im1m"
        android:layout_marginTop="15dp"
        android:text="The Manial Palace and Museum, is a former Alawiyya dynasty era palace and grounds on Rhoda Island on the Nile. It is located in the Sharia Al-Saray area in the El-Manial district of southern Cairo, Egypt. The palace and estate has been preserved as an Antiquities Council directed historic house museum and estate, reflecting the settings and lifestyle of the late 19th- and early 20th-century Egyptian royal prince and heir apparent. The residence compound, composed of five separate and distinctively styled buildings, is surrounded by Persian gardens within an extensive English Landscape garden estate park, along a small branch of the Nile."/>
    "
    <Button

        android:id="@+id/btn1m"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv2m"
        android:background="@color/colorPrimaryDark"
        android:text="hotels"
        android:textColor="#f4f6f8"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:drawableTop="@drawable/ic_hotel_black_24dp"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/btn2m"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn1m"
        android:drawableTop="@drawable/ic_airport_shuttle_black_24dp"
        android:background="#59586f"
        android:text="transport"
        android:textColor="#f4f6f8"
        android:textStyle="bold"
        android:textSize="18dp"

        android:layout_margin="5dp"
        android:layout_marginLeft="35dp"/>
    <Button
        android:id="@+id/btn3m"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv2m"
        android:background="#59586f"
        android:text="location"

        android:drawableTop="@drawable/ic_location_on_black_24dp"
        android:textColor="#f4f6f8"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/btn2m"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>
    <Button
        android:id="@+id/btn4m"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn3m"
        android:layout_toRightOf="@+id/btn2m"
        android:drawableTop="@drawable/ic_star_half_black_24dp"
        android:background="#59586f"
        android:text="feedback"
        android:textColor="#f4f6f8"
        android:textStyle="bold"
        android:textSize="18dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>



</RelativeLayout>